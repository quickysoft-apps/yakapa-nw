{
  "name": "@yakapa/core",
  "version": "0.0.1",
  "description": "> TODO: description",
  "product_string": "yakapa",
  "author": "neurosoup <neurosoup@gmail.com>",
  "homepage": "https://github.com/quickysoft-apps/yakapa-nw#readme",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quickysoft-apps/yakapa-nw.git"
  },
  "main": "http://localhost:8080/index.html",
  "node-remote": [
    "*://*/*"
  ],
  "window": {
    "width": 800,
    "height": 600,
    "frame": true
  },
  "chromium-args": "--enable-logging=stderr --load-extension=../../extensions/react-devtools_3.6.0_0,../../extensions/settings",
  "scripts": {
    "start-parcel": "../../node_modules/.bin/parcel index.html -p 8080 --no-autoinstall",
    "start-nw": "run --x64 --mirror https://dl.nwjs.io/ .",
    "start": "concurrently --kill-others \"npm:start-*\"",
    "build-parcel": "../../node_modules/.bin/parcel build index.html --public-url ./dist",
    "build-nw": "build --tasks --win --x64 --mirror https://dl.nwjs.io/ .",
    "build": "concurrently --kill-others \"npm:build-*\"",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "build": {
    "appId": "yakapa",
    "nwVersion": "0.36.2",
    "nwFlavor": "normal",
    "overriddenProperties": {
      "chromium-args": "--enable-logging=stderr --load-extension=./extensions/react-devtools_3.6.0_0,./extensions/settings/*",
      "files": [
        "dist/**/*",
        "package.json",
        "../../extensions/**/*"
      ],
      "excludes": [
        "src"
      ]
    },
    "output": "bin/",
    "packed": false,
    "strippedProperties": [
      "scripts",
      "devDependencies",
      "build"
    ],
    "outputPattern": "${NAME} ${VERSION} ${PLATFORM} ${ARCH}",
    "win": {
      "productName": "Yakapa",
      "companyName": "QuickySoft",
      "copyright": "copyright"
    },
    "mac": {
      "displayName": "Yakapa",
      "copyright": "copyright",
      "icon": "./assets/pd.icns",
      "plistStrings": {
        "CFBundleIdentifier": "yakapa",
        "CFBundleDocumentTypes": []
      }
    },
    "nsis": {
      "installDirectory": "$PROGRAMFILES\\${_COMPANYNAME}\\${_APPNAME}",
      "diffUpdaters": true
    }
  },
  "devDependencies": {
    "@types/chrome": "0.0.81",
    "@types/nw.gui": "0.0.20",
    "@types/nw.js": "^0.13.8",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "nwjs-builder-phoenix": "^1.15.0",
    "wait-on": "^3.2.0"
  },
  "dependencies": {}
}
