{
  "name": "@yakapa/shell",
  "version": "0.0.1",
  "description": "description",
  "product_string": "yakapa",
  "node-main": "./server.js",
  "main": "http://localhost:8080",
  "bg-script": "./background.js",
  "node-remote": [
    "*://*/*"
  ],
  "author": "neurosoup <neurosoup@gmail.com>",
  "homepage": "https://github.com/quickysoft-apps/yakapa-nw#readme",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quickysoft-apps/yakapa-nw.git"
  },
  "scripts": {
    "start": "node_modules/.bin/gulp start",
    "build": "node_modules/.bin/gulp build",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "window": {
    "width": 800,
    "height": 600,
    "frame": true
  },
  "chromium-args": "--enable-logging=stderr --load-extension=../../extensions/react-devtools_3.6.0_0,../settings/dist",
  "build": {
    "appId": "yakapa",
    "nwVersion": "0.36.3",
    "nwFlavor": "normal",
    "overriddenProperties": {
      "chromium-args": "--enable-logging=stderr --load-extension=dist/extensions/settings"
    },
    "excludes": [
      "_tests_/**/*",
      "src/**/*",
      "tsconfig.json"
    ],
    "output": "../../release/",
    "packed": false,
    "outputPattern": "${NAME} ${VERSION} ${PLATFORM} ${ARCH}",
    "win": {
      "productName": "Yakapa",
      "companyName": "QuickySoft",
      "copyright": "© 2019-2020 QuickySoft"
    },
    "mac": {
      "displayName": "Yakapa",
      "copyright": "© 2019-2020 QuickySoft",
      "icon": "./assets/pd.icns",
      "plistStrings": {
        "CFBundleIdentifier": "yakapa",
        "CFBundleDocumentTypes": []
      }
    },
    "nsis": {
      "installDirectory": "$PROGRAMFILES\\${_COMPANYNAME}\\${_APPNAME}",
      "diffUpdaters": true
    }
  },
  "devDependencies": {
    "@types/chrome": "0.0.81",
    "ts-node": "^8.0.2",
    "@types/nw.gui": "0.0.20",
    "@types/nw.js": "^0.13.8",
    "express": "^4.16.4",
    "nwjs-builder-phoenix": "^1.15.0"
  },
  "dependencies": {
    "gulp": "^4.0.0"
  }
}
